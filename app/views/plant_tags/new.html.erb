<div class="container py-5">
  <div class="row">
    <h1 class="text-center">Add tag for plant <%= @plant.name %></h1>
    <div class="col-12 col-md-6 mx-auto">
      <%= simple_form_for [@plant, @plant_tag] do |f| %>
        <%= f.association :tag,
                          collection: Tag.all, #.where.not(id: @plant.tags.pluck(:id)), => si on ne veut proposer à l'utilisateur uniquement les tags que la plante ne possède pas encore.
                          input_html: {
                            multiple: true
                          } %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
